<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_forecast_data" model="ir.actions.act_window">
        <field name="name">Forecast Data</field>
        <field name="res_model">forecast.data</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Upload a CSV file to start forecasting.
            </p>
        </field>
    </record>

    <record id="action_forecast_result" model="ir.actions.act_window">
        <field name="name">Forecast Results</field>
        <field name="res_model">forecast.result</field>
        <field name="view_mode">list,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate forecasts from uploaded data.
            </p>
        </field>
    </record>

    <menuitem id="menu_forecasting_tool_root" name="Forecasting Tool" sequence="10"/>
    <menuitem id="menu_forecast_data" name="Upload Data" parent="menu_forecasting_tool_root" action="action_forecast_data" sequence="10"/>
    <menuitem id="menu_forecast_result" name="Forecast Results" parent="menu_forecasting_tool_root" action="action_forecast_result" sequence="20"/>
</odoo>